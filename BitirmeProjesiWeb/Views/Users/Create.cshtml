@model BitirmeProjesiWeb.Models.User

@{
    ViewData["Title"] = "Yeni Kullancı ekle";
}

<!-- ---------- Başlık ---------- -->
<div class="container-fluid content">
    <div class="row justify-content-md-center">
        <div class="col-sm-2"></div>

        <div class="col-sm-8 productHeader">
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h4 class="display-4">Yeni Kullancı ekle</h4>
                    <hr>
                    <p class="lead">istenen bilgileri giriniz</p>
                </div>
            </div>
        </div>

        <div class="col-sm-2"></div>
    </div>

    <!-- ---------- İçerik ---------- -->
    <div class="row justify-content-md-center">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 productBody">

            <!-- Tab panes -->
            <div class="tab-content">

                <div id="arapca" class="container tab-pane active">
                    <br>

                    <!-- Arapça Dil Seçeneği -->
                    <form name="CreateForm" asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="form-group ar col-lg-12">
                                <label asp-for="UserRoleId" class="control-label tr"></label>
                                <select asp-for="UserRoleId" class="form-control" asp-items="ViewBag.UserRoleId" dir="rtl"></select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group ar col-lg-12">
                                <label asp-for="FullName" class="control-label tr"></label>
                                <input asp-for="FullName" class="form-control" dir="rtl" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group ar col-lg-12">
                                <label asp-for="Email" class="control-label tr"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group ar col-lg-12">
                                <label asp-for="Password" class="control-label tr"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group ar col-lg-12">
                                <label asp-for="DisplayForClients" class="control-label tr"></label>
                                <input asp-for="DisplayForClients" />
                            </div>
                        </div>

                        <hr>

                        <button type="button" class="btn btn-light button-delete" data-toggle="modal" data-target="#deleteModal"><i class="far fa-arrow-alt-circle-right"></i> Vazgeç</button>
                        <a class="btn btn-light button-add" onclick="document.CreateForm.submit()"><i class="fas fa-user-plus"></i> Ekle</a>

                    </form>
                </div>

            </div>
        </div>

        <div class="col-lg-2"></div>
    </div>

</div>

<!-- The Modal -->
<div class="modal fade" id="deleteModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Vazgeç <i class="fa fa-sign-out" aria-hidden="true"></i></h4>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <p>Vazgeçten emin misiniz ?</p>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer" style="justify-content:normal">
                <a class="btn btn-dark delete-btn-style" asp-action="Index">Evet <i class="fa fa-check" aria-hidden="true"></i></a>
                <button type="button" class="btn btn-dark" data-dismiss="modal">Hayir<i class="fa fa-times" aria-hidden="true"></i></button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}