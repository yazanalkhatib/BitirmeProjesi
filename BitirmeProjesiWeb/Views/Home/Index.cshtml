@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model BitirmeProjesiWeb.ViewModels.Home.IndexViewModel

@{
    ViewData["Title"] = localizer["Title"];

    ViewData["MetaDescription"] = localizer["AboutD"];

    ViewData["MetaKeywords"] = string.Join(", ", Model.Categories.Select(c => c.Name));
}

<!-- Image Slider -->
<div id="clientCarousel" class="carousel slide mt-4 pt-4" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#clientCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#clientCarousel" data-slide-to="1"></li>
        <li data-target="#clientCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner active">
        <div class="carousel-item active">
            <img src="~/siteImages/Slider12.jpg" class="d-block img-fluid w-100">
            <div class="carousel-caption d-block">
                <div class="carousel-anim">
                    <h3><span class="carousel-caption-firstLine">Net</span></h3>
                    <h3><span class="carousel-caption-firstLine" style="letter-spacing:normal">@localizer["Slider1Line1"]</span></h3>
                    <h3><span class="carousel-caption-secondLine" style="letter-spacing:normal">@localizer["Slider1Line2"]</span></h3>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/siteImages/Slider2.jpeg" class="d-block img-fluid w-100">
            <div class="carousel-caption d-block">
                <div class="carousel-anim">
                    <h3><span class="carousel-caption-firstLine">Net</span></h3>
                    <h3><span class="carousel-caption-firstLine" style="letter-spacing:normal">@localizer["Slider2Line1"]</span></h3>
                    <h3><span class="carousel-caption-secondLine" style="letter-spacing:normal">@localizer["Slider2Line2"]</span></h3>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/siteImages/Slider3.jpeg" class="d-block img-fluid w-100">
            <div class="carousel-caption d-block">
                <div class="carousel-anim">
                    <h3><span class="carousel-caption-firstLine">Net</span></h3>
                    <h3><span class="carousel-caption-firstLine" style="letter-spacing:normal">@localizer["Slider3Line1"]</span></h3>
                    <h3><span class="carousel-caption-secondLine" style="letter-spacing:normal">@localizer["Slider3Line2"]</span></h3>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#clientCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#clientCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- Technology Container Start-->
<div class="container-fluid">
    <div class="text-center text-md-center content-style mt-30">
        <div class="mt-4">
            <div>
                <h1 id="technology" class="header-technology content-header-anim align-content-center" style="letter-spacing:normal">@localizer["Categories"]</h1>
                <hr>
            </div>
        </div>
        <br><br>

        <div class="row categories">
            @if (Model.Categories != null && Model.Categories.Count >= 4)
                for (int i = 0; i < 4; i += 2)
                {
                    <div class="col-6 col-sm-6 col-md-3 col-lg-3 main-category">
                        <div class="card text-center category-card" style="height:22rem;">
                            <div class="card-body">
                                <h5 class="card-title textHide-category-a">@Model.Categories[i].Name</h5>
                                <button type="button" class="btn card-link" data-toggle="modal" data-target="#category-modal-@Model.Categories[i].Id">@localizer["LearnMore"]</button>
                            </div>
                            <img src="~/images/@Model.Categories[i].CoverPhotoPath" class="card-img-bottom" alt="@Model.Categories[i].Name" style="height:50%;width:100%">
                        </div>
                    </div>

                    <div class="col-6 col-sm-6 col-md-3 col-lg-3 main-category">
                        <div class="card text-center category-card" style="height:22rem;">
                            <img src="~/images/@Model.Categories[i + 1].CoverPhotoPath" class="card-img-bottom" alt="@Model.Categories[i].Name" style="height:50%;width:100%">
                            <div class="card-body">
                                <h5 class="card-title textHide-category-b">@Model.Categories[i + 1].Name</h5>
                                <button type="button" class="btn card-link" data-toggle="modal" data-target="#category-modal-@Model.Categories[i + 1].Id">@localizer["LearnMore"]</button>
                            </div>
                        </div>
                    </div>
                }
        </div>
    </div>
</div>


<!-- Certificates Container Start-->
<div class="container-fluid text-center text-md-center content-style">
    <div class="mt-4">
        <div>
            <h1 class="header-technology content-header-anim" style="letter-spacing:normal">@localizer["WhyUs"]</h1>
            <hr>
        </div>
    </div>

    <div class="row mt-4 d-flex align-items-center">
        <div class="col-12 col-sm-12 col-md-12 col-lg-5 col-xl-5 company-first-col mx-auto">
            <ul class="list-group company-list-group">
                @foreach (var certificate in Model.Certificates.Take(5))
                {
                    <li class="list-group-item company-list-group-item"><i class="far fa-circle mr-3"></i>@certificate.Name</li>
                }
            </ul>
        </div>

        <div class="col-12 col-sm-12 col-md-12 col-lg-7 col-xl-7 company-second-col mx-auto">
            <div id="category-info-bg">
                <div class="category-info">
                    <h4 class="pt-4 content-header-anim" style="letter-spacing:normal">@localizer["WonderingMsg"]</h4>
                    <h2 class="pb-4 content-header-anim" style="letter-spacing:normal">@localizer["TrustUsQuestion"]</h2>
                    <p class="textHide-category-info pl-4">@localizer["ReviewOurCertificates"]</p>
                </div>
            </div>

        </div>
    </div>

    <div class="row mt-4 d-flex mx-auto mt-4 align-items-center">
        <h2 class="my-4 px-4 py-4" style="font-weight:lighter;">@localizer["AllCertificates"]</h2>
        <hr>

        <div id="certificateCarousel" class="carousel slide w-100" data-ride="carousel">
            <div class="carousel-inner w-100" role="listbox">

                @{bool isFirst = true; }

                @foreach (var certificate in Model.Certificates)
                {
                    if (isFirst)
                    {
                        <div class="carousel-item certificate-carousel active">
                            <div class="col-md-4">
                                <div class="card certificate-card">
                                    <img class="certificate-card-img img-fluid" src="~/images/@certificate.PhotoPath" alt="@certificate.Name" style="max-height:400px">
                                    <div class="card-body">
                                        <h5 class="card-title">@certificate.Name</h5>
                                        <button type="button" class="btn card-link" data-toggle="modal" data-target="#certificate1Modal-@certificate.Id">@localizer["FullScreen"]<i class="far fa-eye mx-2"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        isFirst = false;
                    }
                    else
                    {
                        <div class="carousel-item certificate-carousel">
                            <div class="col-md-4">
                                <div class="card certificate-card">
                                    <img class="certificate-card-img img-fluid" src="~/images/@certificate.PhotoPath" alt="@certificate.Name" style="max-height: 400px">
                                    <div class="card-body">
                                        <h5 class="card-title">@certificate.Name</h5>
                                        <button type="button" class="btn card-link" data-toggle="modal" data-target="#certificate1Modal-@certificate.Id">@localizer["FullScreen"]<i class="far fa-eye mx-2"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            <a class="carousel-control-prev w-auto" href="#certificateCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon bg-dark border border-dark rounded-circle" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next w-auto" href="#certificateCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon bg-dark border border-dark rounded-circle" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<!-- Certificate Modals -->
@foreach (var certificate in Model.Certificates)
{
    <div class="modal fade" id="certificate1Modal-@certificate.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">@certificate.Name</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <img style="max-width: 400px;" src="~/images/@certificate.PhotoPath" alt="@certificate.Name">
                </div>
            </div>
        </div>
    </div>
}


<!-- Marketing Container Start -->
<div class="container-fluid text-center text-md-center marketing-container mt-4">

    <div id="marketing" class="row mt-4 d-flex align-items-center">

        <div class="col-md-4 col-lg-4 col-xl-4 mx-auto mb-2">
            <i class="fas fa-leaf fa-3x mb-4"></i>
            <h4 class="text-uppercase font-weight-bold">@localizer["Quality"]</h4>
            <p class="communication-text" style="font-weight: lighter;">@localizer["QualityDescription"]</p>
        </div>

        <div id="middle-block" class="col-md-4 col-lg-4 col-xl-4 mx-auto mb-2">
            <i class="fas fa-cogs fa-3x mb-4"></i>
            <h4 class="text-uppercase font-weight-bold">@localizer["AuthorizedServices"]</h4>
            <p class="communication-text" style="font-weight: lighter;">@localizer["AuthorizedServicesDescription"]</p>
        </div>

        <div class="col-md-4 col-lg-4 col-xl-4 mx-auto mb-2">
            <i class="far fa-handshake fa-3x mb-4"></i>
            <h4 class="text-uppercase font-weight-bold">@localizer["Communication"]</h4>
            <p class="communication-text" style="font-weight: lighter;">@localizer["CommunicationDescription"]</p>
        </div>

    </div>
</div>


<!-- Product Container Start -->
<div class="container-fluid text-center text-md-center mt-4 content-style">
    <div class="mt-4">
        <div>
            <h1 class="header-technology content-header-anim" style="letter-spacing:normal">@localizer["Products"]</h1>
            <hr>
        </div>
    </div>
    <br><br>

    <div class="row mt-4 d-flex mx-auto mt-4">

        <div id="recipeCarousel" class="carousel slide w-100" data-ride="carousel">
            <div class="carousel-inner w-100" role="listbox">

                @{
                    bool isFirstProduct = true;
                }

                @foreach (var product in Model.Products)
                {
                    @if (isFirstProduct)
                    {
                        <div class="carousel-item product-carousel active">
                            <div class="col-md-4">
                                <div class="card product-card">
                                    <img class="card-product-img img-fluid" src="~/images/@product.CoverPhotoPath" alt="@product.Name">
                                    <div class="card-body">
                                        <h5 class="card-title">@product.Name</h5>
                                        <a asp-action="ProductDetails" asp-route-id="@product.Id" class="btn card-link">@localizer["LearnMore"]</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        isFirstProduct = false;
                    }
                    else
                    {
                        <div class="carousel-item product-carousel">
                            <div class="col-md-4">
                                <div class="card product-card">
                                    <img class="card-product-img img-fluid" src="~/images/@product.CoverPhotoPath" alt="@product.Name">
                                    <div class="card-body">
                                        <h5 class="card-title">@product.Name</h5>
                                        <a asp-action="ProductDetails" asp-route-id="@product.Id" class="btn card-link">@localizer["LearnMore"]</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
            <a class="carousel-control-prev w-auto" href="#recipeCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon bg-dark border border-dark rounded-circle" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next w-auto" href="#recipeCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon bg-dark border border-dark rounded-circle" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>


    </div>

</div>

<!-- Product Container End-->